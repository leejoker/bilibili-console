#!/usr/bin/env ruby

require 'thor'
require 'bilibili_console'

# bilibili-console command line
class BiliConsole < Thor
  def self.exit_on_failure?
    true
  end

  desc 'login', 'login with qrcode'
  def login
    bc = BilibiliConsole.new
    puts bc.login
  end

  desc 'user', 'get user info'
  def user
    bc = BilibiliConsole.new
    user = bc.login_user_info
    puts <<~USER
      uid: #{user.uid}
      uname: #{user.uname}
      level: #{user.level_info[:current_level]}
    USER
  end

  desc 'manga-checkin', 'checkin bilibili manga'
  def manga_checkin
    bc = BilibiliConsole.new
    bc.login_user_info
    puts bc.manga_checkin
  end
end

BiliConsole.start
